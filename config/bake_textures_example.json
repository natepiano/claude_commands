{
  "blend_file": "./path/to/your/model.blend",
  "objects": ["object_name_1", "object_name_2"],
  "output_name": "my_model",
  "texture_resolution": 1024,
  "output_directory": "./output",
  "settings": {
    "bake_margin": 16,
    "use_gpu": true,
    "bake_separate_per_object": true,
    "export_metallic_roughness_packed": true,
    "save_individual_metallic_roughness": false,
    "export_glb": true
  },
  "texture_maps": {
    "albedo": true,
    "normal": true,
    "roughness": true,
    "metallic": true,
    "ambient_occlusion": true,
    "emission": false
  }
}
